@model IEnumerable<Seller.Admin.Models.Message.MessageResponseModel>

@{
    ViewData["Title"] = "All Messages";
}

<div class="row">
    <div class="col-lg-4">
        <h2>All Dealers</h2>
    </div>
</div>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Sender</th>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
            <th scope="col">Created</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var message in Model)
    {
        <tr>
            <td>@message.SenderUsername</td>
            <td>@message.Title</td>
            <td>@message.Content</td>
            <td>@message.Created</td>
            <td>
                <a class="btn btn-primary"
                   asp-area=""
                   asp-controller="Message"
                   asp-action="Process"
                   asp-route-id="@message.Id">
                    Edit
                </a>
            </td>
        </tr>
    }
    </tbody>
</table>

